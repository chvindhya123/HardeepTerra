module "CPS2_ASG_SG" {
   source = "../modules/security_group"
   com = "ASG"
   vars = "${merge(var.cp, var.cps2)}"
}
module "CPS2_ASG" {
   source = "../modules/autoscaling_group"
   vars = "${merge(var.cp, var.cps2)}"
   security_groups = ["${module.CPS2_ASG_SG.security_group_id}"]
#   user_data = "Hello"
   vpc_subnets = "${var.subnets["cp_site2"]}"
}

module "CPS2_ASG_SG_InRule_22" {
   source = "../modules/security_group_rule_by_cidr"
   sg_id  = "${module.CPS2_ASG_SG.security_group_id}"
   rule_type = "ingress"
   protocol = "tcp"
   from_port = "${var.ports["ssh"]}"
   to_port = "${var.ports["ssh"]}"
   source_cidr_blocks = ["0.0.0.0/0"]
}     
module "CPS2_ASG_SG_InRule_Self" {
   source = "../modules/security_group_rule_by_sg"
   sg_id  = "${module.CPS2_ASG_SG.security_group_id}"
   rule_type = "ingress"
   protocol = "-1"
   from_port = "0"
   to_port = "65535"
   source_sg_id = "${module.CPS2_ASG_SG.security_group_id}"
}  
